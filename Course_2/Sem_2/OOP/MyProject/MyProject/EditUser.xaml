<Window x:Class="MyProject.EditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyProject"
        mc:Ignorable="d"
        Title="EditUser" Height="450" Width="800">
    <Grid Background="Aqua">
        <TextBlock Text="Login" FontSize="20" TextAlignment="Center" Margin="0,40,0,0" />
        <TextBox x:Name="UserName" Width="200" Height="30" Margin="0,0,0,250" TextChanged="UserName_TextChanged" />
        <TextBlock Text="Password" FontSize="20" TextAlignment="Center" Margin="0,200,0,0"/>
        <TextBox x:Name="UserPassword" Width="200" Height="30" Margin="0,70,0,0" TextChanged="UserPassword_TextChanged"/>
        <Border Height="30" Width="200" Margin="0,300,0,0"> 
            <Button Content="Редактировать" Background="Purple" Foreground="White" Click="Button_Click"/>
        </Border>
    </Grid>
</Window>
